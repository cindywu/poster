= form_with(model: tag, local: true) do |form|
  .form.form-group
    - if tag.errors.any?
      #error_explanation
        h2 = "#{pluralize(tag.errors.count, "error")} prohibited this tag from being saved:"

        ul
          - tag.errors.full_messages.each do |message|
            li = message

    .field.my-3
      = form.label :text
      = form.text_field :text, required: true

      = form.label :description
      = form.text_area :description

      = form.hidden_field :user_id, value: current_user.id

    .actions
      = form.submit "Submit", class: "btn btn-primary"

      = link_to tag, method: :delete, data: { confirm: 'Are you sure?' } do
        .btn.btn-danger.ml-2 Delete Tag
